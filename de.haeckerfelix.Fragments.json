{
    "app-id" : "de.haeckerfelix.Fragments",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "fragments",
    "finish-args" : [
        "--filesystem=home",
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1",
        "--metadata=X-DConf=migrate-path=/de/haeckerfelix/Fragments/"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libevent",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libevent/libevent",
                    "tag" : "release-2.1.11-stable"
                }
            ]
        },
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts": [
                    "-Dglade_catalog=disabled",
                    "-Dintrospection=disabled",
                    "-Dexamples=false",
                    "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://source.puri.sm/Librem5/libhandy",
                    "tag" : "v0.0.13"
                }
            ]
        },
        {
            "name" : "fragments",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/World/Fragments",
                    "tag" : "1.4",
                    "commit" : "f91ea9b576f3ff2621d5f3fda417a9a43107607c"
                },
                {
                    "type": "patch",
                    "path": "appdata_oars.patch"

                }
            ]
        }
    ]
}
